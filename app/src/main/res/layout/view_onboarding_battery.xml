<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_clock"
        app:tint="?attr/colorPrimary"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_battery_title"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_battery_desc"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textAlignment="center"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="32dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAllowBattery"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/onboarding_battery_btn_allow"
        style="@style/Widget.Material3.Button"
        app:cornerRadius="28dp"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSkipBattery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_battery_btn_skip"
        style="@style/Widget.Material3.Button.TextButton"
        android:textColor="?attr/colorOnSurfaceVariant" />

</LinearLayout>
